{% extends "@core/actions/my-pinned.twig" %}

{% block pinned %}
    <ul>
        {% for pinned in pinnedResources %}
            <li id="pinnedLi{{pinned.resource}}">
                <a href="#"
                   title="{{ _t('PINNED_REMOVE') }}"
                   data-resource="{{ pinned.resource }}"
                   data-user="{{ currentUser }}"
                   data-toggle="tooltip"
                   data-placement="right"
                   data-linkedPinnedid="pinnedLi{{pinned.resource}}"
                   class="btn btn-icon btn-default btn-xs pinned user-pinned">
                    <i class="fas fa-thumbtack"></i>
                </a>
                <a href="{{ url({tag:pinned.resource}) }}" class="modalbox" data-size="modal-lg" title="{{ pinned.title ?? pinned.resource }}">
                    {{ pinned.title ?? pinned.resource }}
                </a>
            </li>
        {% endfor %}
    </ul>
    {% if block('deleteAllButton') is defined %}
        {{ block('deleteAllButton') }}
    {% endif %}
{% endblock %}
