{% extends "@bazar/layouts/input.twig" %}

{% block input %}
    <div class="input-group">
        <input
            type="password"
            id="{{ field.name }}"
            name="{{ field.name }}"
            class="form-control"
            maxlength="{{ field.maxChars }}"
            size="{{ field.maxChars }}"
            {% if field.required %}required{% endif %}
        />
        {% if value %}
            <input type="hidden" value="{{ value }}" name="{{ field.name }}-previous">
        {% endif %}
    </div>
{% endblock %}
